{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                // Ubicamos los ".a" en la carpeta "/lib"
                "${fileDirname}/lib/linkLayer.a",
                "-o",
                // Los ejecutables se mandaran a la carpeta "/exe"
                "${fileDirname}/exe/${fileBasenameNoExtension}",                
                "-lpcap",
                "-pthread",
                "-fpermissive",
                // Ubicamos los ".h" en la carpeta "/include"
                "-I${workspaceFolder}/include"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}